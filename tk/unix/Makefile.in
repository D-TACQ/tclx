include ../Config.mk
include ../config/${TCL_CONFIG_FILE}
SHELL=/bin/sh

#------------------------------------------------------------------------------

LIBTKX.A  = ../tkmaster/lib/libtkx.a
WISHX     = ../tkmaster/bin/wishx

LIBTCLX.A = ../tclmaster/lib/libtclx.a

CFLAGS= ${OPTIMIZE_FLAG} ${XCFLAGS} -I../src -I../${TK_UCB_DIR} \
        -I../${TCL_UCB_DIR} ${MEM_DEBUG_FLAGS} ${SYS_DEP_FLAGS}

LDLIBS= ${LIBTKX.A} ${LIBTCLX.A} ${TK_LIBS} ${LIBS}

#------------------------------------------------------------------------------

OBJS=tkXstartup.o tkXsignal.o

#------------------------------------------------------------------------------

all: made.tmp ${WISHX}

${WISHX}: tkMain.o ${LIBTKX.A} ${LIBTCLX.A} made.tmp
	${CC} ${CFLAGS} ${XLDFLAGS} tkMain.o -o ${WISHX} ${LDLIBS}
	if ${DO_STRIPPING} ; then \
	    strip ${WISHX}; \
	    ${MCS_CMD} ${WISHX}; fi

made.tmp: ${OBJS}
	${AR} cr ${LIBTKX.A} ${OBJS}
	${RANLIB_CMD} ${LIBTKX.A}
	touch made.tmp

tkXstartup.o: tkXstartup.c
	${CC} -c ${CFLAGS} -DTK_MASTERDIR=\"${TK_MASTERDIR}\" tkXstartup.c

#------------------------------------------------------------------------------

clean:
	-rm -f made.tmp ${WISHX} ${OBJS}
