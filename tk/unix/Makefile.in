SHELL = /bin/sh

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in Config.mk

srcdir    = @srcdir@
VPATH     = @srcdir@
XINCLUDES = @XINCLUDES@
LIBS      = @LIBS@
XLIBSW    = @XLIBSW@
RANLIB    = @RANLIB@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@$(srcdir)/../Config.mk@MAKEQUOTE@

#------------------------------------------------------------------------------

LIBTKX.A  = ../tkmaster/lib/libtkx.a
WISHX     = ../tkmaster/bin/wishx

LIBTCLX.A = ../tclmaster/lib/libtclx.a

# The ordering of the libraries is important.  Some X libs on SysV include
# "random" in a BSD module.  This would conflict with the one in the Tcl
# library if it was brought in.

LDLIBS = ${LIBTKX.A} ${XLIBSW} ${LIBTCLX.A} -lm ${LIBS}

CC_FLAGS = ${CPPFLAGS} ${XCFLAGS} ${CFLAGS} \
           -I../$(srcdir)/src  -I../$(srcdir)/tksrc -I../${TK_UCB_SRC} \
           -I../${TCL_UCB_SRC} ${XINCLUDES}
 
.c.o:
	${CC} ${CC_FLAGS} -c $<

#------------------------------------------------------------------------------

OBJS = tkXstartup.o tkXsignal.o

#------------------------------------------------------------------------------

all: made.tmp ${WISHX}

${WISHX}: tkMain.o ${LIBTKX.A} ${LIBTCLX.A} made.tmp
	${CC} ${CC_FLAGS} ${XLDFLAGS} tkMain.o ${LDLIBS} ${XLDLIBS} -o ${WISHX}
	if ${DO_STRIPPING} ; then \
	    strip ${WISHX}  ;\
	    ${MCS_CMD} ${WISHX} ;\
	else \
	    exit 0 ;\
	fi

made.tmp: ${OBJS}
	${AR} cr ${LIBTKX.A} ${OBJS}
	${RANLIB} ${LIBTKX.A}
	touch made.tmp

tkXstartup.o: tkXstartup.c
	${CC} -c ${CC_FLAGS} -DTK_MASTERDIR=\"${TK_MASTERDIR}\" tkXstartup.c

#------------------------------------------------------------------------------

clean:
	-rm -f made.tmp ${WISHX} ${OBJS} tkMain.o

#------------------------------------------------------------------------------
# Restore to the distributed state.

distclean: clean
	rm -f Makefile
