include ../Config.mk
include ../config/$(TCL_CONFIG_FILE)
SHELL=/bin/sh

#------------------------------------------------------------------------------

TCL.TLIB=      ../tclmaster/tcl.tlib
TCL.TNDX=      ../tclmaster/tcl.tndx
TCLINIT.TCL=   ../tclmaster/TclInit.tcl
BUILDHELP.TCL= ../tclmaster/buildhelp.tcl
BUILDIDX.TCL=  ../tclmaster/buildidx.tcl
LOADOUSTER.TCL=../tclmaster/loadouster.tcl

#------------------------------------------------------------------------------

TCL_SRCS=arrayprocs.tcl   compat.tcl       convlib.tcl      edprocs.tcl     \
         forfile.tcl      forrecur.tcl     globrecur.tcl    help.tcl        \
         profrep.tcl      pushd.tcl        setfuncs.tcl     showprocs.tcl   \
         stringfile.tcl   tkdemo.tcl        tcllib.tcl      fmath.tcl       \
         tclshell.tcl \
         parray.tcl       ../$(TCL_UCB_DIR)/library/parray.tcl

#------------------------------------------------------------------------------

all: made.tmp

made.tmp: $(TCLINIT.TCL) $(BUILDHELP.TCL) $(BUILDIDX.TCL) $(LOADOUSTER.TCL) \
          $(TCL.TLIB)
	touch made.tmp

$(TCLINIT.TCL): TclInit.tcl
	-rm -f $(TCLINIT.TCL) 
	cp TclInit.tcl $(TCLINIT.TCL)

$(BUILDHELP.TCL): buildhelp.tcl
	-rm -f $(BUILDHELP.TCL)
	cp buildhelp.tcl $(BUILDHELP.TCL)

$(BUILDIDX.TCL): buildidx.tcl
	-rm -f $(BUILDIDX.TCL)
	cp buildidx.tcl $(BUILDIDX.TCL)

$(LOADOUSTER.TCL): loadouster.tcl
	-rm -f $(LOADOUSTER.TCL)
	cp loadouster.tcl $(LOADOUSTER.TCL)

$(TCL.TLIB): $(TCL_SRCS) $(BUILDIDX.TCL) $(TCLINIT.TCL)
	-rm -f $(TCL.TLIB) $(TCL.TNDX)
	cat $(TCL_SRCS) | egrep -v '^#$$|^#  *|^#-|^#=|^  *#' > $@
#???	../runtcl -c "buildpackageindex $(TCL.TLIB)"

#------------------------------------------------------------------------------

clean:
	-rm -f made.tmp $(TCL.TLIB) $(TCL.TNDX)

