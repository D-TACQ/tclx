SHELL = /bin/sh

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in Config.mk

srcdir            = @srcdir@
srcbasedir        = @srcbasedir@
bldbasedir        = @bldbasedir@
VPATH             = @srcdir@
MAN_DIR_SEPARATOR = @MAN_DIR_SEPARATOR@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@${bldbasedir}/Config.mk@MAKEQUOTE@

#------------------------------------------------------------------------------

TCL.TLIB       = ${bldbasedir}/tclmaster/tcl.tlib
TCL.TNDX       = ${bldbasedir}/tclmaster/tcl.tndx
TCLINIT.TCL    = ${bldbasedir}/tclmaster/TclInit.tcl
BUILDIDX.TCL   = ${bldbasedir}/tclmaster/buildidx.tcl
LOADOUSTER.TCL = ${bldbasedir}/tclmaster/loadouster.tcl
MAN            = ${bldbasedir}/tclmaster/man
HELP           = ${bldbasedir}/tclmaster/help
CPMANPAGES     = ${srcbasedir}/tools/cpmanpages.tcl
BLDMANHELP     = ${srcbasedir}/tools/bldmanhelp.tcl
TCLMANPAGES    = ${srcbasedir}/tools/tclmanpages

#------------------------------------------------------------------------------

TCL_SRCS = arrayprocs.tcl   compat.tcl       convlib.tcl      edprocs.tcl     \
           forfile.tcl      forrecur.tcl     globrecur.tcl    help.tcl        \
           profrep.tcl      pushd.tcl        setfuncs.tcl     showproc.tcl    \
           stringfile.tcl   tcllib.tcl       fmath.tcl        tclshell.tcl    \
           buildhelp.tcl    \
           parray.tcl       ${TCL_UCB_SRC}/library/parray.tcl

#------------------------------------------------------------------------------

all: ${TCLINIT.TCL} ${BUILDHELP.TCL} ${BUILDIDX.TCL} ${LOADOUSTER.TCL} \
     ${TCL.TLIB} ${MAN} HELPCP

${TCLINIT.TCL}: TclInit.tcl
	-rm -f ${TCLINIT.TCL} 
	cp ${srcdir}/TclInit.tcl ${TCLINIT.TCL}

${BUILDIDX.TCL}: buildidx.tcl
	-rm -f ${BUILDIDX.TCL}
	cp ${srcdir}/buildidx.tcl ${BUILDIDX.TCL}

${LOADOUSTER.TCL}: loadouster.tcl
	-rm -f ${LOADOUSTER.TCL}
	cp ${srcdir}/loadouster.tcl ${LOADOUSTER.TCL}

${TCL.TLIB}: ${TCL_SRCS} ${BUILDIDX.TCL} ${TCLINIT.TCL}
	-rm -f ${TCL.TLIB} ${TCL.TNDX}
	(cd ${srcdir}; cat ${TCL_SRCS}) | \
	    egrep -v '^#$$|^#  *|^#-|^#=|^  *#' > $@
	../runtcl -c "buildpackageindex ${TCL.TLIB}"

#------------------------------------------------------------------------------
# Copy manual pages to master directory.

${MAN}: ${TCLINIT.TCL} ${TCL.TLIB}
	if [ ! -d ${MAN} ] ; then \
	    ../runtcl ${CPMANPAGES} TCL ${TCL_UCB_SRC}/doc \
                      ${MAN_DIR_SEPARATOR} ;\
	    ../runtcl ${CPMANPAGES} TCLX ${srcbasedir}/man \
                      ${MAN_DIR_SEPARATOR} ;\
	else \
	    exit 0 ;\
	fi

#------------------------------------------------------------------------------
# Copy help files if they don't appear to exist and we are in a different
# directory from the srcdir.
#

HELPCP: ${HELP}/Tcl.brf ${HELP}/TclX.brf

${HELP}/Tcl.brf ${HELP}/TclX.brf:
	sh ${srcbasedir}/tools/cphelpdir.sh ${srcbasedir}/tclmaster/help \
           ${bldbasedir}/tclmaster/help

#------------------------------------------------------------------------------
# Build help for Tcl & TclX.

buildtclhelp: ${TCLINIT.TCL} ${TCL.TLIB}
	rm -rf ${HELP}
	mkdir ${HELP}
	../runtcl ${BLDMANHELP} ${TCL_UCB_SRC}/doc ${TCLMANPAGES} \
                  ${HELP} Tcl.brf
	../runtcl -c "buildhelp ${HELP} TclX.brf ${srcbasedir}/man/TclX.man"

#------------------------------------------------------------------------------
# Clean up everything but the manual pages that we copied to the master
# directories.

partclean:
	-rm -f ${TCL.TLIB} ${TCL.TNDX} ${TCLINIT.TCL}
	-rm -f ${BUILDHELP.TCL} ${BUILDIDX.TCL} ${LOADOUSTER.TCL}

#------------------------------------------------------------------------------
# Clean up all files that were built by make.

clean: partclean
	-rm -rf ${MAN}

#------------------------------------------------------------------------------
# Restore to the distributed state.

distclean: clean
	rm -f Makefile
