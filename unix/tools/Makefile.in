SHELL = /bin/sh

#------------------------------------------------------------------------------

srcdir = @srcdir@
VPATH  = @srcdir@

@MAKEINCLUDE@ @MAKEQUOTE@$(srcdir)/../Config.mk@MAKEQUOTE@

#------------------------------------------------------------------------------

CC_FLAGS = ${CPPFLAGS} ${XCFLAGS} ${CFLAGS} -I$(srcdir)/../src \
           -I../${TCL_UCB_SRC}

.c.o:
	${CC} ${CC_FLAGS} -c $<
 
#------------------------------------------------------------------------------

all: tclxversion $(TK_BUILD)

tclxversion: getversion.c
	$(CC) $(CC_FLAGS) getversion.c -o tclxversion

WISHX: tkxversion

tkxversion: getversion.c
	$(CC) $(CC_FLAGS) -I../$(TK_UCB_SRC) -DTK_GET_VERSION getversion.c \
	   -o tkxversion

#------------------------------------------------------------------------------

clean:
	-rm -f tclxversion tkxversion *.o

#------------------------------------------------------------------------------
# Restore to the distributed state.

distclean: clean
	rm -f Makefile
