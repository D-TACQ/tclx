include ../Config.mk
include ../config/${TCL_CONFIG_FILE}
SHELL=/bin/sh

#------------------------------------------------------------------------------

CFLAGS=${OPTIMIZE_FLAG} ${XCFLAGS} -I../${TCL_UCB_DIR} ${SYS_DEP_FLAGS}

#------------------------------------------------------------------------------

all: tclxversion $(TK_BUILD)

tclxversion: getversion.c
	$(CC) $(CFLAGS) getversion.c -o tclxversion

WISHX: tkxversion

tkxversion: getversion.c
	$(CC) $(CFLAGS) -I../$(TK_UCB_DIR) -DTK_GET_VERSION getversion.c \
	   -o tkxversion

#------------------------------------------------------------------------------

clean:
	-rm -f tclxversion tkxversion *.o

